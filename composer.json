{
    "name": "imponeer/symfony-translations-constants-loader",
    "description": "symfony/translation extension to load PHP files that are defined all translations as constants",
    "type": "library",
    "require": {
        "php": ">=8.3",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pcre": "*",
        "symfony/translation": "^7.0"
    },
    "keywords": [
        "translation",
        "symfony",
        "loader",
        "constants"
    ],
    "config": {
        "sort-packages": true
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Raimondas Rimkevičius",
            "email": "github@mekdrop.name"
        }
    ],
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": ">=11",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Imponeer\\SymfonyTranslationsConstantsLoader\\": "src/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
    }
}
